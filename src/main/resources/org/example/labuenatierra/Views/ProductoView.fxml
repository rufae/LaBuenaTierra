<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="671.0" prefWidth="560.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.labuenatierra.Controllers.ProductoController">

    <!-- Barra superior con el nombre de la empresa -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-background-color: #bb7035; -fx-padding: 10;">
            <Label style="-fx-text-fill: white; -fx-font-size: 18px;" text="LaBuenaTierra" />
            <Region HBox.hgrow="ALWAYS" />
        </HBox>
    </top>

    <!-- Menú lateral izquierdo con miniaturas de imágenes del producto -->
    <left>
        <VBox spacing="10.0" style="-fx-padding: 20;">
            <ImageView fitHeight="150" fitWidth="80" pickOnBounds="true" preserveRatio="true" />
            <ImageView fitHeight="150" fitWidth="80" pickOnBounds="true" preserveRatio="true" />
            <ImageView fitHeight="150" fitWidth="80" pickOnBounds="true" preserveRatio="true" />
        </VBox>
    </left>

    <!-- Área principal con imagen del producto, nombre, precio y descripción -->
    <center>
        <VBox alignment="CENTER" spacing="20.0" style="-fx-padding: 20;">
            <ImageView fx:id="productoImage" fitHeight="400" fitWidth="300" pickOnBounds="true" preserveRatio="true" />
            <Label fx:id="nombreProductoLabel" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-font-family: 'Arial';" text="Nombre del Producto" />
            <Label fx:id="precioLabel" style="-fx-font-size: 18px; -fx-text-fill: green; -fx-font-family: 'Arial';" text="32,99€" />
            <Label maxWidth="400" style="-fx-font-size: 14px; -fx-font-family: 'Arial'; -fx-padding: 0 20;" text="Este producto es elaborado con ingredientes naturales de la más alta calidad. Perfecto para cualquier ocasión." wrapText="true" />

            <!-- Campo para seleccionar la cantidad y botón de añadir al carrito, movido al centro -->
            <VBox alignment="CENTER" spacing="10.0" style="-fx-padding: 20;">
                <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Cantidad" />
                <Spinner fx:id="cantidadSpinner" initialValue="1" max="99" min="1" />
                <Button style="-fx-background-color: #bb7035; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;" text="Añadir al carrito" />
            </VBox>
        </VBox>
    </center>

</BorderPane>
