<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.labuenatierra.Controllers.TiendaController">

    <!-- Barra superior -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-background-color: #3498db; -fx-padding: 10;">
            <Label style="-fx-text-fill: white; -fx-font-size: 18px;" text="AIO" />
            <Region HBox.hgrow="ALWAYS" />
            <TextField promptText="Buscar artículos y marcas..." />
            <Button graphicTextGap="0" style="-fx-background-color: transparent; -fx-text-fill: white;" text="0">
                <graphic>
                    <ImageView fx:id="cartIcon" fitHeight="20" fitWidth="20" pickOnBounds="true" preserveRatio="true" />
                </graphic>
            </Button>
        </HBox>
    </top>

    <!-- Contenido principal -->
    <center>
        <VBox alignment="CENTER" spacing="10.0" style="-fx-padding: 20;">
            <Label style="-fx-font-size: 24px;" text="OFERTAS EN MODA DEPORTIVA PARA MUJER" />
            <Label style="-fx-font-size: 16px;" text="196 productos" />
            <Label style="-fx-font-size: 12px;" text="Promoción de temporada, válida del 20/08/2024 al 30/09/2024." />

            <GridPane hgap="15" style="-fx-padding: 10;" vgap="15">
                <!-- Producto 1 -->
                <VBox alignment="CENTER" style="-fx-border-color: lightgray; -fx-border-radius: 5; -fx-padding: 10;">
                    <ImageView fitHeight="150" fitWidth="120" pickOnBounds="true" preserveRatio="true" />
                    <Label text="Producto 1" />
                    <Label style="-fx-text-fill: green;" text="29.99" />
                </VBox>
                <!-- Producto 2 -->
                <VBox alignment="CENTER" style="-fx-border-color: lightgray; -fx-border-radius: 5; -fx-padding: 10;">
                    <Label text="Producto 2" />
                    <Label style="-fx-text-fill: green;" text="34.99" />
                </VBox>
                 <ImageView fitHeight="150" fitWidth="120" pickOnBounds="true" preserveRatio="true" GridPane.columnIndex="1" />
            <columnConstraints>
               <ColumnConstraints />
               <ColumnConstraints />
            </columnConstraints>
            <rowConstraints>
               <RowConstraints />
            </rowConstraints>
                <!-- Más productos... -->
            </GridPane>
        </VBox>
    </center>

</BorderPane>
